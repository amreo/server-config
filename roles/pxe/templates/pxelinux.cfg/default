UI /utils/vesamenu.c32
DEFAULT client
TIMEOUT 30

MENU TITLE BgLUG PXE Boot
MENU BACKGROUND /utils/bglug.png

LABEL client
	MENU LABEL Installa nuova macchina CLIENT
	LINUX	/ubuntu/14.04/amd64/linux
	INITRD	/ubuntu/14.04/amd64/initrd.gz
	APPEND	vga=normal ks=http://{{ ansible_local.domain.serverfqdn }}/ks/profiles/client-trusty.cfg -- quiet
	
LABEL docenti
	MENU LABEL Installa nuova macchina DOCENTI
	LINUX	/ubuntu/14.04/amd64/linux
	INITRD	/ubuntu/14.04/amd64/initrd.gz
	APPEND	vga=normal ks=http://{{ ansible_local.domain.serverfqdn }}/ks/profiles/docenti-trusty.cfg -- quiet
	
MENU SEPARATOR

MENU BEGIN
MENU TITLE Edubuntu Classica

LABEL edubuntu-64
	MENU LABEL Installa Edubuntu 64 bit
	LINUX	/ubuntu/14.04/amd64/linux
	INITRD	/ubuntu/14.04/amd64/initrd.gz
	APPEND	locale=it_IT.UTF-8 keyboard-configuration/layoutcode=it url=http://{{ ansible_local.domain.serverfqdn }}/ks/preseed/edubuntu.seed
	
LABEL edubuntu-32
	MENU LABEL Installa Edubuntu 32 bit
	LINUX	/ubuntu/14.04/i386/linux
	INITRD	/ubuntu/14.04/i386/initrd.gz
	APPEND	locale=it_IT.UTF-8 keyboard-configuration/layoutcode=it url=http://{{ ansible_local.domain.serverfqdn }}/ks/preseed/edubuntu.seed

MENU SEPARATOR

LABEL return-edu
	MENU LABEL ^Torna al menu principale
	MENU EXIT
MENU END

MENU SEPARATOR

LABEL local
	MENU LABEL Boot from ^local hard drive
	LOCALBOOT 0

MENU SEPARATOR

MENU BEGIN
MENU TITLE Utilities

LABEL hdt
	MENU LABEL ^HDT - Hardware Diagnostic Tool
	KERNEL /utils/memdisk
	INITRD /utils/hdt.img
	APPEND floppy

LABEL memtest
	MENU LABEL ^memtest86 - Test della RAM
	KERNEL /utils/memtest86/vmlinuz

MENU SEPARATOR

LABEL return
	MENU LABEL ^Torna al menu principale
	MENU EXIT

MENU END
